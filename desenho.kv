# desenho.kv

<RootWidget>:
    name: 'main'
    FloatLayout:


        TelaBrancaCisHetero:
            id: drawing_area
            size_hint: None, None
            size: root.width * 1, root.height * 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Branco (R=1, G=1, B=1, A=1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        Image:
            source: 'assets/bg.png' 
            allow_stretch: True
            keep_ratio: False
            size: self.parent.size
            pos: self.parent.pos


        IconButton:
            source: 'assets/bunny1.png'
            pos_hint: {"x": 0.7, "y": 0.85}
            size_hint: (0.15,0.15)
            id:lapis
            size: 64, 64
        IconButton:
            source: 'assets/bunny2.png'
            id:borracha
            pos_hint: {"x": 0.8, "y": 0.85}
            size_hint: (0.15,0.15)
            size: 64, 64

        Image:
            source: 'assets/grossura.png' 
            allow_stretch: True
            keep_ratio: False
            size_hint: 0.3, 0.15
            pos_hint: {"center_x": 0.2, "y": 0.06}

        BoxLayout:
            size_hint: 0.2, 0.5
            pos_hint: {"center_x": 0.16}
            y: 0.2
            BoxLayout:
                id: task_list
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                spacing: 50

                BoxLayout:
                    size_hint_y: None
                    height: '40dp'

                    Button:
                        text: "1"
                        size_hint_x: None
                        background_color: (0,0,0,1)
                        width: '40dp'
                        on_release:app.root.ids.drawing_area.mudarGrossura(1)
                        

                BoxLayout:
                    size_hint_y: None
                    height: '45dp'

                    Button:
                        text: "2"
                        size_hint_x: None
                        width: '45dp'
                        background_color: (0,0,0,1)
                        on_release:app.root.ids.drawing_area.mudarGrossura(3)
                        

                BoxLayout:
                    size_hint_y: None
                    height: '50dp'

                    Button:
                        text: "3"
                        size_hint_x: None
                        width: '50dp'
                        background_color: (0,0,0,1)
                        on_release:app.root.ids.drawing_area.mudarGrossura(6)

                        

                BoxLayout:
                    size_hint_y: None
                    height: '55dp'

                    Button:
                        text: "4"
                        size_hint_x: None
                        width: '55dp'
                        background_color: (0,0,0,1)
                        on_release:app.root.ids.drawing_area.mudarGrossura(9)
        BoxLayout:
            size_hint: 0.2, 0.5
            pos_hint: {"center_x": 0.7}
            y: 0.2
            BoxLayout:
                id: task_list
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                spacing: 50

                BoxLayout:
                    size_hint_y: None
                    height: '45dp'

                    Button:
                        text: ""
                        size_hint_x: None
                        background_color: (2.55, 0.13, 0, 0.8)
                        width: '45dp'
                        on_release:app.root.ids.drawing_area.mudarCor((2.55, 0.13, 0, 0.8))
                        

                BoxLayout:
                    size_hint_y: None
                    height: '45dp'

                    Button:
                        text: ""
                        size_hint_x: None
                        width: '45dp'
                        background_color: (0.29,2.55,0,0.8)
                        on_release:app.root.ids.drawing_area.mudarCor((0.29,2.55,0,0.8))
                        

                BoxLayout:
                    size_hint_y: None
                    height: '45dp'

                    Button:
                        text: ""
                        size_hint_x: None
                        width: '45dp'
                        background_color: (0, 0,0,1)
                        on_release:app.root.ids.drawing_area.mudarCor((0, 0,0,1))
                        

                BoxLayout:
                    size_hint_y: None
                    height: '45dp'

                    Button:
                        text: ""
                        size_hint_x: None
                        width: '45dp'
                        background_color: (0, 1.51, 2.55, 1)
                        on_release:app.root.ids.drawing_area.mudarCor((0, 1.51, 2.55, 1))

                BoxLayout:
                    size_hint_y: None
                    height: '45dp'

                    Button:
                        text: ""
                        size_hint_x: None
                        width: '45dp'
                        background_color:(2.36,2.55,0, 0.8)
                        on_release:app.root.ids.drawing_area.mudarCor((2.36,2.55,0, 0.8))
                        
<IconButton@ButtonBehavior+Image>:
    on_press: app.root.ids.drawing_area.desenhar()
